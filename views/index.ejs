<!DOCTYPE html>
<html lang="en">
  <head>
    <title>QUIZZAS!</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/index.css" />
    <link rel="stylesheet" href="/styles/_nav.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <!-- Include the header -->

    <main>
      <section class="title">
        <h1>QUIZZAS!</h1>
        <p>get your reslts right away and share it with your friends!</p>
        <form action="/quizzes/new" method="GET">
          <button>Create quiz</button>
        </form>
      </section>

      <section class="list-of-quizzes">
        <% for (const quiz of result) { %>

        <div>
          <a href="/quizzes/<%= quiz.id %>"><%= quiz.title %></a>
        </div>
        <% } %>

        <button><a href="/quizzes">More quizzes</a></button>
      </section>
    </main>
  </body>
</html>
