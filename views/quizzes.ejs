<!DOCTYPE html>
<html lang="en">
  <head>
    <title>List of Quizzes</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/quizzes.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <!-- Include the header -->

    <section class="all-list">
      <h1>List of Quizzes</h1>

      <% for (const quiz of result) { %>
      <div>
        <p class="title"><%= quiz.title %></p>
        <article><%= quiz.description %></article>
        <p>Creator: <%= quiz.username %></p>
        <footer>
          <button>
            <a href="/quizzes/<%= quiz.id%>">Attempt This Quiz</a>
          </button>
        </footer>
      </div>
      <% } %>
    </section>
  </body>
</html>
